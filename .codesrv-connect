cd "/c/Projects/py-notebooks"
if ! test -S "/tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock"; then
    echo "ERROR: /tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock not a socket. Dead session."
else
    export VSCODE_IPC_HOOK_CLI="/tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock"
    if ! PATH="/home/thing/.vscode-server/bin/3dd905126b34dcd4de81fa624eb3a8cbe7485f13/bin:$PATH" codesrv-status; then
        echo "ERROR: dead vscode connection."
            read -n 1 -p "Delete dead context info /tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock ? (y/n): "
            if [[ $REPLY =~ [yY] ]]; then
                rm /tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock
                rm .codesrv-connect
            fi
    else
        alias code=/home/thing/.vscode-server/bin/3dd905126b34dcd4de81fa624eb3a8cbe7485f13/bin/code
        PATH=$(pathadd "/home/thing/.vscode-server/bin/3dd905126b34dcd4de81fa624eb3a8cbe7485f13/bin")
        echo "OK: the 'code' command will talk to socket \"/tmp/vscode-ipc-656954b1-59cf-4adf-8d9f-df194d1c29dd.sock\" now."
        echo "You can use this command to connect other shells to this code server:"
        echo "   cd /c/Projects/py-notebooks; codesrv"
        fi
fi
